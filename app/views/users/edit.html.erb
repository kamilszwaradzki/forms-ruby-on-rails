<% @user.errors.full_messages.each do |message| %>
    <div><%= message %></div>
<% end %>
<%= form_with model: @user do |form| %>
  <div class="mb-3">
    <%= form.label :email, class:"form-label" %><br>
    <%= form.text_field :email, class:"form-control", placeholder: 'example@example.com' %>

  </div>

  <div class="mb-3">
    <%= form.label :username, class:"form-label", value:'Your user name here' %><br>
    <%= form.text_field :username, class:"form-control" %><br>
  </div>

  <div class="mb-3">
    <%= form.label :password, class:"form-label" %><br>
    <%= form.password_field :password, class:"form-control" %><br>
  </div>

  <div class="mb-3">
    <%= form.submit "Update user", class: "btn btn-primary" %>
  </div>
<% end %>